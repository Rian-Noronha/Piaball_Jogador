<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".add_jogos.AddJogoActivity">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Data do jogo:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDataJogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:hint="Ex.: 10/12/2022"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textQntGols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Fez quantos gols:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarQntGols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="10" />

        <TextView
            android:id="@+id/textQntAssistencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Deu quantas assistências:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarQntAssistencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="10" />

        <TextView
            android:id="@+id/textQntDesarmes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Fez quantos desarmes:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarQntDesarmes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="10" />

        <TextView
            android:id="@+id/textQntFinalizacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Finalizou quantas vezes:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarQntFinalizacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="20" />

        <RadioGroup
            android:id="@+id/radioGroupAddAmarelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/verde_fraco">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="Tomou amarelo no jogo:"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioAddUm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Tomei UM amarelo" />

            <RadioButton
                android:id="@+id/radioAddDois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Tomei DOIS amarelos" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Tomou vermelho no jogo:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioAddVermelho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:minHeight="48dp"
            android:text="Tomei vermelho" />

        <TextView
            android:id="@+id/textTimeCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Nome do seu time:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAddTimeCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:hint="Ex.: Vasco"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textGolsTimeCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Gols do seu time:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarQntGolsTimeCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="30" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Nome do time de fora:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:hint="Ex.: Psg"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textGolsRival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Gols do time de fora:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarQntGolsRival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="30" />

        <RadioGroup
            android:id="@+id/radioGroupModalidade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/fundoRadioGroup">

            <TextView
                android:id="@+id/radioModalidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="Bote a modalidade do jogo:"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioMinicampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minicampo" />

            <RadioButton
                android:id="@+id/radioCampoGrande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CampoGrande" />

        </RadioGroup>

        <TextView
            android:id="@+id/textNotaJogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="De 0 a 10, quanto você mereceu pelo jogo?"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBarNotaJogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:max="10" />

        <Button
            android:id="@+id/btnCadastrarJogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/purple_700"
            android:text="PRONTO" />

    </LinearLayout>
</ScrollView>